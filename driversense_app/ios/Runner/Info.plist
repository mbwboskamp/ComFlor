<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>DriverSense</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>DriverSense</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>DriverSense heeft toegang tot je locatie nodig om je ritten te registreren.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>DriverSense heeft toegang tot je locatie nodig om je ritten op de achtergrond te registreren.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>DriverSense heeft toegang tot je locatie nodig om je ritten te registreren, ook als de app op de achtergrond draait.</string>

	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>location</string>
		<string>processing</string>
		<string>remote-notification</string>
	</array>

	<!-- Camera Permission -->
	<key>NSCameraUsageDescription</key>
	<string>DriverSense heeft toegang tot je camera nodig om foto's te maken van de kilometerstand en incidenten.</string>

	<!-- Microphone Permission -->
	<key>NSMicrophoneUsageDescription</key>
	<string>DriverSense heeft toegang tot je microfoon nodig om spraakberichten op te nemen bij incidentmeldingen.</string>

	<!-- Photo Library Permission -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>DriverSense heeft toegang tot je fotobibliotheek nodig om foto's te selecteren.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>DriverSense wil foto's opslaan in je fotobibliotheek.</string>

	<!-- Face ID Permission -->
	<key>NSFaceIDUsageDescription</key>
	<string>Gebruik Face ID om snel en veilig in te loggen.</string>

	<!-- Speech Recognition -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>DriverSense gebruikt spraakherkenning om je gesproken incidentmeldingen om te zetten naar tekst.</string>

	<!-- Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.driversense.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>driversense</string>
			</array>
		</dict>
	</array>

	<!-- Universal Links -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:app.driversense.app</string>
	</array>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- Localization -->
	<key>CFBundleLocalizations</key>
	<array>
		<string>nl</string>
		<string>en</string>
		<string>fr</string>
	</array>

	<!-- ITSAppUsesNonExemptEncryption -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
</dict>
</plist>
